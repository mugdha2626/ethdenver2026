# Cloak Environment Configuration
# Copy this to .env and fill in your values

# SLACK (Required) — Get from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# CANTON (Optional — defaults shown)
CANTON_JSON_API_URL=http://localhost:7575
JWT_SECRET=sandbox-secret

# DATABASE (Optional)
DB_PATH=./data/cc.db

# NGROK (Optional — enables public tunnel for multi-device demos)
# NGROK_AUTHTOKEN=your-ngrok-authtoken-here

# LOGGING (Optional)
LOG_LEVEL=info
