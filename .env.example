# ConfidentialConnect Environment Configuration
# Copy this to .env and fill in your values

# SLACK (Required) — Get from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# CANTON API VERSION
# v1 = local sandbox (default)
# v2 = DevNet / Canton 3.x+
CANTON_API_VERSION=v1

# CANTON CONNECTION
CANTON_JSON_API_URL=http://localhost:7575

# CANTON AUTH
# For v1 sandbox: JWT_SECRET is used to sign tokens
JWT_SECRET=sandbox-secret
# For v2 DevNet: Set a pre-issued admin token (overrides JWT generation)
# CANTON_AUTH_TOKEN=your-admin-token-here

# CANTON PACKAGE (v2 only — must match daml.yaml 'name' field)
# CANTON_PACKAGE_NAME=confidential-connect

# DAR PATH (optional — auto-detected from daml/ directory)
# DAR_PATH=./daml/.daml/dist/confidential-connect-0.1.0.dar

# DATABASE (Optional)
DB_PATH=./data/cc.db

# LOGGING (Optional)
LOG_LEVEL=info
